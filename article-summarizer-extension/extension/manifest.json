{
  "manifest_version": 3,
  "name": "AI Article Summarizer",
  "version": "1.0",
  "description": "Summarizes the current web article using AI.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Summarize this article"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage" 
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}